{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "diagnostics": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "./bin",
    "./build",
    "./component",
    "./config",
    "./context",
    "./controller",
    "./entry",
    "./hoc",
    "./hook",
    "./middleware",
    "./page",
    "./polyfill",
    "./scripts",
    "./start",
    "./util",
    "type.d.ts"
  ]
}
