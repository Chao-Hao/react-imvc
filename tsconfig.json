{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "diagnostics": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/bin",
    "./build",
    "src/component",
    "./config",
    "src/context",
    "./controller",
    "./entry",
    "src/hoc",
    "src/hook",
    "./middleware",
    "src/page",
    "src/polyfill",
    "src/scripts",
    "./start",
    "./util",
  ],
  "files": [
    "src/type.d.ts"
  ]
}
